	<div id="logo-container">
		<img src="../img/logo.png" id="logo-img">
	</div>
	<ul id="top-root-nav">
		{{#each pages}}
		<li class="navigation-li" data-link="{{name}}">{{name}}</li>
		{{/each}}
	</ul>

	<div id="login-container">
		<div class="loginregister">
			<button id="btn-login">Login or Register</button>
		</div>
		<div class="logoutbtncontainer">
			<button id="btn-logout">Logout</button>
		</div>
	</div>

</div>
</div>

<div id="bottom-nav-bar">
	<div id="weather-container">
		{{!-- <p>This is where the weather goes</p> --}}
	</div>
</div>

<div id="logindialog-background">
	<div id="login-dialog">
		<div id="login-wrapper">
			<div id="login-form">
				<form method="post" class="userform">
					<p>Login:</p>
					{{!-- change this to username, not email --}}
					<label for="email" class="label">Username:</label>
					<input type="email" id="loginEmail" placeholder="Username" name="email" required>

					<label for="password" class="label">Password:</label>
					<input type="password" id="login-password" placeholder="Password" name="password" required>

					<input type="button" value="Login" id="loginsubmit" />
				</form>
			</div>

			<div id="register-form">
				<form method="post" class="userform">
					<p>Register:</p>
					<label for="firstname" class="label">Enter your first name:</label>
					<input type="firstname" id="firstname" placeholder="First Name" name="firstname" required>

					<label for="lastname" class="label">Enter your last name:</label>
					<input type="lastname" id="lastname" placeholder="Last Name" name="lastname" required>
					<label for="email" class="label">Enter your email:</label>
					<input type="email" id="email" placeholder="Email" name="email" required>

					<label for="username" class="label">Enter a username:</label>
					<input type="username" id="username" placeholder="Username" name="username" required>

					<label for="password" class="label">Enter a Password:</label>
					<input type="password" id="register-password" placeholder="Password" name="password" required>

					{{!-- double check this line --}}
					<input type="button" value="Register" id="registersubmit" />
				</form>
			</div>
		</div>
		<button id="exitlogin">X</button>


	</div>
</div>



